<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_art_image"
            android:paddingStart="@dimen/title_padding"
            android:paddingEnd="@dimen/title_padding"
            android:paddingTop="@dimen/title_padding"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/name_size" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/title_padding"
            android:layout_below="@id/tv_title"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/iv_art_image" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@id/iv_art_image"
            android:layout_width="@dimen/item_img_height"
            android:layout_height="@dimen/item_img_height"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/img_margin"
            android:layout_marginEnd="@dimen/img_margin"
            app:placeholderImage="@drawable/coming_soon_img" />
    </RelativeLayout>
</android.support.v7.widget.CardView>