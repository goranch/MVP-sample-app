<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">


    <TextView
        android:id="@+id/tv_view_instrouctions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/title_padding"
        android:text="@string/view_instructions"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_blue_light"/>

    <TextView
        android:id="@+id/tv_view_original"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_view_instrouctions"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/title_padding"
        android:text="@string/view_original"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_blue_light"/>

    <TextView
        android:id="@+id/tv_publichers_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_view_original"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/tv_social_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_view_original"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
</RelativeLayout>