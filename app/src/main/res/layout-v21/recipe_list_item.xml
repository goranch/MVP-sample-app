<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/recipe_image"
        android:layout_toStartOf="@+id/btn_arrow"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center|start"
        android:paddingEnd="@dimen/title_padding"
        android:paddingStart="@dimen/title_padding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/name_size"/>


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/recipe_image"
        android:layout_width="@dimen/item_img_height"
        android:layout_height="@dimen/item_img_height"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/img_margin"
        fresco:roundingBorderWidth="2dp"
        />

    <ImageView
        android:id="@id/btn_arrow"
        android:layout_width="@dimen/item_img_height"
        android:layout_height="@dimen/item_img_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/select"/>

</RelativeLayout>